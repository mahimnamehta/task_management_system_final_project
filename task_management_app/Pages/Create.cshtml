@page
@model task_management_app.Pages.CreateModel
@{
}

<form method="post">
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" class="form-control" asp-for="Description" required/>
    </div>
    <div class="form-group">
        <label asp-for="AssignedToUid">Assigned To User:</label>
        <select id="AssignedToUid" name="AssignedToUid" class="form-control" asp-for="AssignedToUid" required>
            <option value="">Select a user: </option>
            @foreach(var user in Model.Users)
            {
                <option value="@user.uid">@user.name (@user.email)</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-4 w-100">Create</button>
</form>